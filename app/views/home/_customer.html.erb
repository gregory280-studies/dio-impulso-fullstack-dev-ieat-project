<p>Restaurantes</p>
<table>
  <thead>
    <tr>
      <th>nome</th>
    </tr>
  </thead>
  <tbody>
    <% Restaurant.all.each do |r| %>
    <tr>
      <td><%= r.name %></th>
      <table>
        <thead>
          <tr>
            <th>produtos</th>
          </tr>
        </thead>
        <tbody>
          <% r.products.each do |p| %>
            <tr>
              <%= form_tag('/orders') do %>

                <%= hidden_field_tag :product_id, p.id %>
                <td>âžž<%= p.name %></td>
                <td>R$ <%= p.value %></td>
                <td><%= submit_tag 'Pedir' %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </tr>
    <% end %>
  </tbody>
</table>